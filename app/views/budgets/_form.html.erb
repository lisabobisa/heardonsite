<%= form_with(model: budget) do |form| %>
  <% if budget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>

      <ul>
        <% budget.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <%= form.hidden_field :member_id, value: params[:member] %>

  <div class="field">
    <%= form.label :cap %>
    <%= form.number_field :cap %>
  </div>

  <div class="field">
    <%= form.label :time_frame %>
    <%= form.select :time_frame, options_for_select(Budget.time_frames.map {|k,v| k}) %>
  </div>
  
If custom, select days
  <div class="field">
    <%= form.label :days %>
    <%= form.number_field :days %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
