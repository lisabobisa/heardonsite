<table class="table">
  <thead>
  
  <th>Email</th>
  <th>Role</th>
  <th></th>
  <th></th>
  <th></th>
  </thead>

  <tbody>
    <% @family.members.each do |member| %>
      <tr>
        <td><%= member.email %></td>
        <td><%= member.role %></td>
        <td><%= link_to 'Show', member %></td>
